<mujoco model="ant">
  <compiler angle="radian"/>

  <option timestep="0.01" integrator="RK4"/>

  <visual>
    <global offwidth="480"/>
  </visual>

  <default>
    <joint limited="true" armature="1" damping="2"/>
    <geom conaffinity="0" friction="1 0.5 0.5" margin="0.01" density="500" rgba="0.8 0.6 0.4 1"/>
  </default>

  <custom>
    <numeric name="init_qpos" size="15" data="0 0 0.55 0.707107 0 0 -0.707107 0 1 0 -1 0 -1 0 1"/>
  </custom>

  <asset>
    <texture type="skybox" colorspace="auto" builtin="gradient" rgb1="1 1 1" rgb2="0 0 0" width="100" height="600"/>
    <texture type="cube" colorspace="auto" name="texgeom" builtin="flat" mark="cross" rgb1="0.8 0.6 0.4" rgb2="0.8 0.6 0.4" markrgb="1 1 1" width="127" height="762"/>
    <texture type="2d" colorspace="auto" name="texplane" builtin="checker" rgb1="0 0 0" rgb2="0.8 0.8 0.8" width="100" height="100"/>
    <material name="MatPlane" texture="texplane" texrepeat="60 60" specular="1" shininess="1" reflectance="0.5"/>
    <material name="geom" texture="texgeom" texuniform="true"/>
  </asset>

  <worldbody>
    <geom name="floor" size="40 40 40" type="plane" conaffinity="1" material="MatPlane" rgba="0.8 0.9 0.8 1"/>
    <light pos="0 0 1.3" dir="0 0 -1" type="directional" cutoff="100" exponent="1" diffuse="1 1 1" specular="0.1 0.1 0.1"/>
    <body name="torso_f" pos="0 0.6 0.28">
      <joint name="root" type="free" margin="0.01" armature="0" damping="0"/>
      <geom name="torso_front" type="capsule"  size="0.16 0.2" fromto="0 -.03  0   0 0.1  0"  />
      <geom name="left_eye" size="0.03" pos="-0.07 0.2 0.11" rgba="0.8 0.3 0.4 1" />
      <geom name="right_eye" size="0.03" pos="0.07 0.2 0.11" rgba="0.8 0.3 0.4 1" />

      <camera name="track" pos="3.5 0 0.45" quat="0.478354 0.520038 0.520038 0.478354" mode="trackcom"/>
      <body name="front_right_leg" pos=".02 -0.08 0.0">
        <joint name="hip_1" pos="0 0 0" axis="0 0 1" range="-0.523599 0.523599"/>
        {RIGHT_LEG_GEOM}
        <body pos="0.28 0.28 0">
          <joint name="ankle_1" pos="0 0 0" axis="-0.707107 0.707107 0" range="0.523599 1.22173"/>
          {RIGHT_ANKLE_GEOM}
        </body>
      </body>
      <body name="front_left_leg" pos="-.02 -0.08 0.0">
        <joint name="hip_2" pos="0 0 0" axis="0 0 1" range="-0.523599 0.523599"/>
        {LEFT_LEG_GEOM}
        <body pos="-0.28 0.28 0">
          <joint name="ankle_2" pos="0 0 0" axis="0.707107 0.707107 0" range="-1.22173 -0.523599"/>
          {LEFT_ANKLE_GEOM}
        </body>
      </body>
      <body name="torso_b" pos="0 -0.2 0">
        <geom name="torso_back" type="capsule"  size="0.16 0.2" fromto="0 -.12  0   0 0.03  0"  />
        <body name="back_left_leg">
          <joint name="hip_3" pos="0 0 0" axis="0 0 1" range="-0.523599 0.523599"/>
          {BACK_LEFT_LEG_GEOM}
          <body pos="-0.2 -0.2 0">
            <joint name="ankle_3" pos="0 0 0" axis="-0.707107 0.707107 0" range="-1.22173 -0.523599"/>
            {BACK_LEFT_ANKLE_GEOM}
          </body>
      </body>
      <body name="back_right_leg">
        <joint name="hip_4" pos="0 0 0" axis="0 0 1" range="-0.523599 0.523599"/>
        {BACK_RIGHT_LEG_GEOM}
        <body pos="0.2 -0.2 0">
          <joint name="ankle_4" pos="0 0 0" axis="0.707107 0.707107 0" range="0.523599 1.22173"/>
          {BACK_RIGHT_ANKLE_GEOM}
        </body>
      </body>

      </body>

    </body>
  </worldbody>

  <actuator>


    <general joint="hip_1" ctrllimited="true" ctrlrange="-1 1" gear="140 0 0 0 0 0"/>
    <general joint="hip_2" ctrllimited="true" ctrlrange="-1 1" gear="140 0 0 0 0 0"/>
    <general joint="hip_3" ctrllimited="true" ctrlrange="-1 1" gear="140 0 0 0 0 0"/>
    <general joint="hip_4" ctrllimited="true" ctrlrange="-1 1" gear="140 0 0 0 0 0"/>

    <general joint="ankle_1" ctrllimited="true" ctrlrange="-1 1" gear="120 0 0 0 0 0"/>
    <general joint="ankle_2" ctrllimited="true" ctrlrange="-1 1" gear="120 0 0 0 0 0"/>
    <general joint="ankle_3" ctrllimited="true" ctrlrange="-1 1" gear="120 0 0 0 0 0"/>
    <general joint="ankle_4" ctrllimited="true" ctrlrange="-1 1" gear="120 0 0 0 0 0"/>
  </actuator>
</mujoco>
